@model ShoeShopping.Models.ApplicationUsers
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



    <h2 class="text-info">Customer Info</h2>

        <div class="container border border-secondary rounded" style="padding:15px;">
            <input hidden asp-for="Id" />
            <div class="form-group row">
                <div class="col-4">
                    Customer Name:
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Email:
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Phone Number:
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Shipping Address:
                </div>
                <div class="col-8">
                    <input asp-for="ShippingAddress" class="form-control" disabled />
                </div>
            </div>
        </div>
