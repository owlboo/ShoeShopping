@model List<ShoeShopping.Models.Products>
@{
    int sum = 0;
}
@if (Model.Count > 0)
{
    <br /><br />
    <div class="row">
        <h2 class="text-info">Your Items</h2>
        <table class="table table-striped">
            <tr class="table-info">
                <th style="text-align:center;" width="20%">
                    <label>Image</label>
                </th>
                <th style="text-align:center;">
                    <label asp-for="@Model.FirstOrDefault().Name"></label>
                </th>
                <th style="text-align:center;">
                    <label asp-for="@Model.FirstOrDefault().Price"></label>
                </th>
                <th style="text-align:center;">
                    <label asp-for="@Model.FirstOrDefault().Gender"></label>
                </th>
                <th style="text-align:center;">
                    @*<label asp-for="@Model.Products.FirstOrDefault().CategoryProducts.Name"></label>*@
                    <label>Category</label>
                </th>
                <th style="text-align:center;">
                    @*<label asp-for="@Model.Products.FirstOrDefault().ProductTags.Name"></label>*@
                    <label>Tag</label>
                </th>
                <th style="text-align:center;">
                </th>
            </tr>
            @foreach (var item in Model)
            {

                <tr style="padding:50px;">
                    <td>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.Image" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
                        </a>
                    </td>
                    <td style="text-align:center;">

                        @Html.DisplayFor(c => item.Name)

                    </td>
                    <td style="text-align:center;">
                        @if (item.Discount > 0)
                        {
                            @Html.DisplayFor(c => item.New_Price)
                            sum += Convert.ToInt32(item.New_Price);
                        }
                        else
                        {
                            @Html.DisplayFor(c => item.Price)
                            sum += Convert.ToInt32(item.Price);
                        }
                    </td>
                    <td style="text-align:center;">

                        @Html.DisplayFor(c => item.Gender)

                    </td>
                    <td style="text-align:center;">
                        @Html.DisplayFor(c => item.CategoryProducts.Name)

                    </td>
                    <td style="text-align:center;">
                        @Html.DisplayFor(c => item.ProductTags.Name)

                    </td>
                </tr>
            }
        </table>
    </div>
}

