@model List<ShoeShopping.Models.ApplicationUsers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /> <br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Admin Users List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-area="Identity" asp-page="/Account/CreateAdminUser" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; New Admin User</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(m=>m.FirstOrDefault().Address)
            </th>
            <th>
                Disabled
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(m=>item.Address)
                </td>
                <td>
                    @if (item.LockoutEnd != null && item.LockoutEnd > DateTime.Now)
                    {
                        <label>Disabled</label>
                    }
                </td>
                <td>
                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                    {

                        <a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+item.Id)"><i class="fas fa-edit"></i></a>
                        <a type="button" class="btn btn-danger" href="@Url.Action("Delete/"+item.Id)"><i class="fas fa-trash-alt"></i></a>
                    }
                </td>
            </tr>
        }
    </table>
</div>


