@model List<ShoeShopping.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<br /> <br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; New Product</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(m=>m.FirstOrDefault().Image)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Available)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().CategoryProducts)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().ProductTags)
            </th>
            <th>
                @Html.DisplayNameFor(m=>m.FirstOrDefault().Material)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Origin)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Gender)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FirstOrDefault().Discount)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    <img src="@item.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
                </td>
                <td>VNĐ
                    @if (item.Discount > 0)
                    {
                       @Html.DisplayFor(m => item.New_Price)
                    }
                    else
                    {
                        @Html.DisplayFor(m => item.Price)
                    }


                </td>
                <td>
                    @Html.DisplayFor(m => item.Available)
                </td>
                <td>
                    @Html.DisplayFor(m => item.CategoryProducts.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ProductTags.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Discount) %
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
        }
    </table>
</div>
