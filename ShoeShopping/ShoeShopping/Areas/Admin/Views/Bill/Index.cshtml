@model List<ShoeShopping.Models.Bills>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="get">
    <br /><br />
    <h2 class="text-info">Bill List</h2>
    <div style="height:150px; background-color:aliceblue" class="container">
        @*We will add search criteria*@
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                    Customer Name
                </div>
                <div class="col-3">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>

                <div class="col-2">
                    Email
                </div>
                <div class="col-3">
                    @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                    Phone Number
                </div>
                <div class="col-3">
                    @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>

                <div class="col-2">
                    Bill Date
                </div>
                <div class="col-3">
                    @Html.Editor("searchDate", new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                </div>
            </div>
            <div class="row" style="padding-top:10px;">
                <div class="col-2">

                </div>
                <div class="col-3">

                </div>
                <div class="col-2">

                </div>

                <div class="col-2">

                </div>
                <div class="col-3">
                    <button type="submit" value="Search" class="btn btn-primary form-control">
                        <i class="fa fa-search"></i> Search
                    </button>
                </div>
            </div>

        </div>
    </div>

    <br /><br />

    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th style="text-align:center" width="200%">
                    Customer Name
                </th>
                <th style="text-align:center">
                    Bill Name
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(m => m.FirstOrDefault().TotalPrice)
                </th>
                <th style="text-align:center" width="150%">
                    @Html.DisplayNameFor(m => m.FirstOrDefault().BillDate)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Users.Email)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Users.PhoneNumber)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Users.ShippingAddress)
                </th>
                <th style="text-align:center">
                    Status
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Users.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(m => item.BillDate)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Users.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Users.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Users.ShippingAddress)
                </td>
                @if (item.IsPaid)
                {
                    <td>Puchased</td>
                }
                else
                {
                    <td>Pending</td>
                }
                <td align="center">
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
            }
        </table>
    </div>

</form>